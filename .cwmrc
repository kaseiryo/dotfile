#
# The start file of cwm
#

# Set font
fontname "sans-serif:pixelsize=14:bold"

# Turn on sticky-group mode
sticky yes

# Global settings
gap 30 73 0 0
borderwidth 2
moveamount 10
color activeborder blue
color inactiveborder gray

# Application menu
command Terminal        "xterm "
command Firefox         "firefox"
command Libreoffice     "soffice"
command Gimp            "gimp"
command Gvim            "gvim"
command Xpdf            "xpdf"

# Ignore programs by not drawing borders around them
ignore  xconsole
ignore  xclock

# Autogroup definitions
autogroup 1     "xterm,XTerm"
autogroup 2     "Navigator,Firefox"

# Keybindings
bind    M-q     quit
bind    M-x     delete
bind    M-r     exec
bind 	MC-r	restart

bind    M-0     nogroup
bind    M-1     grouponly1
bind    M-2     grouponly2
bind    M-3     grouponly3
bind    M-4     grouponly4
bind    MS-1    movetogroup1
bind    MS-2    movetogroup2
bind    MS-3    movetogroup3
bind    MS-4    movetogroup4

